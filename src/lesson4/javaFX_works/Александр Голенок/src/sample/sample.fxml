

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ListView?>

<VBox fx:controller="sample.Controller" style="-fx-background-image: url(java.jpeg);"
      xmlns:fx="http://javafx.com/fxml" alignment="center" stylesheets="/css/styles.css" >



    <ListView fx:id="listView" VBox.vgrow="ALWAYS" editable="false"/>

    <HBox>
        <TextField fx:id="textField" promptText="Введие текст ..." HBox.hgrow="ALWAYS" onAction="#sendTextToArea"/>
        <Button HBox.hgrow="ALWAYS" text="Send Massage" onAction="#sendTextToArea"/>

    </HBox>

</VBox>

