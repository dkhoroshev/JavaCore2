<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" stylesheets="/css/Style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mychat.Controller">

    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" promptText="С НАСТУПАЮЩИМ!"/>
    <HBox>
        <TextField fx:id="textField" onAction="#sendmsg"  promptText="Введите сообщение" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Times New Roman" size="16.0"  />
         </font></TextField>
          <Button fx:id="btn1" onAction="#sendmsg" text="Отправить сообщение" />
    </HBox>

</VBox>
